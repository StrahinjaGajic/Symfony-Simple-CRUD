{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}
    <a href="/todo" class="btn btn-default">Back to Todos</a>
    <hr>
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Category: {{ todo.category }}</li>
        <li class="list-group-item">Prioriry: {{ todo.priority }}</li>
        <li class="list-group-item">Due: <strong>{{ todo.dueDate|date("m/d/Y") }}</strong></li>
    </ul>
    <p>
        Description:<br>{{ todo.description }}
    </p>
{% endblock %}